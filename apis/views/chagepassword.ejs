<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Demo</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background-color: rgb(50, 57, 78);
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .main {

      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      background-color: rgb(34, 34, 34);
      height: 400px;
      width: 300px;
      margin-top: 15%;
      border-radius: 10px;
      box-shadow: 2px 4px 6px rgb(0, 0, 0);
    }

    .pass {
      display: flex;
      flex-direction: column;
      width: 90%;
    }

    .image h2 {
      color: rgb(2, 149, 27);
      font-size: 30px;
      font-family: sans-serif;
      margin-bottom: 50px;
    }

    .username input,
    .pass input {
      font-family: sans-serif;
      margin-bottom: 20px;
      height: 30px;
      border-radius: 100px;
      border: none;
      width: 100%;
      padding-left: 10px;
      /* text-align: center; */
      outline: none;
      width: 95%;
    }

    .submit_btn {
      height: 30px;
      width: 80px;
      border-radius: 100px;
      border: none;
      outline: none;
      background-color: rgb(0, 179, 95);
      margin-top: 15px;
    }

    .submit_btn:hover {
      background-color: rgba(0, 179, 95, 0.596);
      color: rgb(14, 14, 14);
      cursor: pointer;
    }
  </style>
</head>

<body>
  <form action="/api/updatepassword" method="post" enctype="multipart/form-data">


    <div class="main">
      <div class="image">
        <h2>Change Password</h2>
      </div>
      <div class="username">
        <input hidden type="text" name="token" value="<%=token%>">
      </div>
      <div class="pass">
        <input id="pass" type="password" name="password" placeholder="Enter Password"onkeyup="validate_password()" required"">
        <span id="wrong_pass_alert1"></span>

        <input id="confirm_pass" type="password" name="confirmPassword" placeholder="Confirm Password" required onkeyup="validate_password()">
      </div>
      <span id="wrong_pass_alert"></span>
      <div class="buttons">
        <button id="create" class="submit_btn">
          Update
        </button>
      </div>
    </div>
  </form>
  <script>
   function validate_password() {
        var pass = document.getElementById('pass').value;
        var confirm_pass = document.getElementById('confirm_pass').value;

        // Regular expression to check for at least one alphabetic and one numeric character
        var alphaNumericRegex = /^(?=.*[a-zA-Z])(?=.*\d).{8,}$/;
        if (!alphaNumericRegex.test(pass)) {
            document.getElementById('wrong_pass_alert1').style.color = 'red';
            document.getElementById('wrong_pass_alert1').innerHTML = 'â˜’ Password must be at least 8 characters long and include both alphabetic and numeric characters';
            document.getElementById('create').disabled = true;
            document.getElementById('create').style.opacity = (0.4);
        } else {
            document.getElementById('wrong_pass_alert1').innerHTML = '';
            document.getElementById('wrong_pass_alert1').style.display = 'none';
        }
        if (!alphaNumericRegex.test(pass)) {
            document.getElementById('wrong_pass_alert').style.color = 'red';
            document.getElementById('wrong_pass_alert1').innerHTML = 'â˜’ Password must be at least 8 characters long and include both alphabetic and numeric characters';
            document.getElementById('create').disabled = true;
            document.getElementById('create').style.opacity = (0.4);
        } else if (pass !== confirm_pass) {
            document.getElementById('wrong_pass_alert').style.color = 'red';
            document.getElementById('wrong_pass_alert').innerHTML = 'â˜’ Passwords do not match';
            document.getElementById('create').disabled = true;
            document.getElementById('create').style.opacity = (0.4);
        } else {
            document.getElementById('wrong_pass_alert').style.color = 'green';
            document.getElementById('wrong_pass_alert').innerHTML = 'ðŸ—¹ Password Matched';
            document.getElementById('create').disabled = false;
            document.getElementById('create').style.opacity = (1);
        }
    }

    function wrong_pass_alert() {
        if (document.getElementById('pass').value !== "" && document.getElementById('confirm_pass').value !== "") {
        } else {
            alert("Please fill all the fields");
        }
    }
  </script>
</body>
</html>